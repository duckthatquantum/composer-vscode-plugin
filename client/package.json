{
  "name": "blockchain-network-explorer",
  "displayName": "Blockchain Network Explorer",
  "description": "Explorer your Blockchain networks",
  "author": "IBM",
  "keywords": [
    "distributed ledger technology",
    "blockchain",
    "DLT"
  ],
  "homepage": "https://hyperledger.github.io/composer/",
  "license": "Apache-2.0",
  "version": "0.19.8",
  "publisher": "IBM",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.19.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IBM-Blockchain/fabric-vscode-plugin"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onView:blockchainExplorer",
    "onCommand:blockchainExplorer.refreshEntry",
    "onCommand:blockchainExplorer.connectEntry",
    "onCommand:blockchainExplorer.addConfigEntry",
    "onCommand:blockchainExplorer.testEntry"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "blockchainExplorer",
          "name": "Blockchain Explorer"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Blockchain configuration",
      "properties": {
        "fabric.connections": {
          "type": "array",
          "default": [],
          "description": "Configurations for connecting to a Blockchain network"
        }
      }
    },
    "commands": [
      {
        "command": "blockchainExplorer.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "blockchainExplorer.connectEntry",
        "title": "Connect"
      },
      {
        "command": "blockchainExplorer.addConfigEntry",
        "title": "Add Config"
      },
      {
        "command": "blockchainExplorer.testEntry",
        "title": "Test"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "blockchainExplorer.refreshEntry",
          "when": "view == blockchainExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "blockchainExplorer.testEntry",
          "when": "view == blockchainExplorer && viewItem == blockchain-peer-item"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "pretest": "npm run lint & npm run licchk",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "posttest": "node ./node_modules/.bin/istanbul check-coverage",
    "licchk": "license-check-and-add",
    "tslint": "tslint",
    "lint": "npm run tslint 'src/**/*.ts' 'test/**/*.test.ts'"
  },
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/glob": "^5.0.35",
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.52",
    "angular-tslint-rules": "^1.2.1",
    "chai": "^4.1.2",
    "decache": "^4.4.0",
    "electron": "^1.7.12",
    "electron-rebuild": "^1.7.3",
    "glob": "^7.1.2",
    "istanbul": "^0.4.5",
    "license-check-and-add": "2.3.6",
    "mocha": "^5.0.0",
    "remap-istanbul": "^0.11.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.3.0",
    "typescript": "^2.6.2",
    "vsce": "^1.39.0",
    "vscode": "^1.1.5"
  },
  "dependencies": {
    "fabric-client": "1.1.2",
    "fs-extra": "^6.0.1",
    "mocha": "^5.2.0",
    "vscode-languageclient": "^3.5.0"
  },
  "license-check-and-add-config": {
    "folder": ".",
    "license": "LICENSE.txt",
    "exact_paths_method": "EXCLUDE",
    "exact_paths": [
      "node_modules",
      "out",
      ".vscode-test",
      "coverage",
      "resources"
    ],
    "file_type_method": "EXCLUDE",
    "file_types": [
      ".txt",
      ".vsix",
      ".yml"
    ],
    "insert_license": false,
    "clear_license": false,
    "license_formats": {
      "ts|acl|cto|js|qry": {
        "prepend": "/*",
        "append": "*/",
        "eachLine": {
          "prepend": " * "
        }
      },
      "vscodeignore": {
        "eachLine": {
          "prepend": "# "
        }
      },
      "md": {
        "file": "../markdown-license.txt"
      }
    }
  }
}
